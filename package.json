{
  "name": "layer-vue",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{vue,ts,tsx,md}\""
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
